<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <extension qualifier="docker">
        <property name="serverVersion">1.12</property>
        <property name="serverUri">http://localhost:2375</property>
        <property name="dockerContainers">
            tomcat:
              buildImage:
                dockerfileLocation: src/test/resources-tomcat-7-dockerfile/tomcat
                noCache: true
                remove: true
              await:
                strategy: polling
              env: [JAVA_OPTS=-Dcom.sun.management.jmxremote.port=8089 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false]
              portBindings: 
                - exposedPort: 8089/tcp
                  port: 8089
                  
                - exposedPort: 8080/tcp
                  port: 8080
        </property>
    </extension>

    <container qualifier="tomcat" default="true">
        <configuration>
            <property name="host">localhost</property>
            <property name="httpPort">8080</property>
            <property name="user">admin</property>
            <property name="pass">mypass</property>
        </configuration>
    </container>

</arquillian>